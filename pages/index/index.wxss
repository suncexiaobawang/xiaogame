/**index.wxss**/
.container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #f5f5f5;
  position: relative;
}

/* 顶部栏 */
.header {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  background-color: #4a90e2;
  color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2px solid #fff;
}

.nickname {
  font-size: 32rpx;
  max-width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.login-btn {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  background-color: #fff;
  color: #4a90e2;
  border-radius: 30rpx;
  margin-left: 10rpx;
}

.points-container {
  display: flex;
  align-items: center;
}

.points-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.points {
  font-size: 36rpx;
  font-weight: bold;
}

.action-buttons {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 游戏分类标签 */
.tabs {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.tab {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 0 30rpx;
}

.tab.active {
  color: #4a90e2;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #4a90e2;
  border-radius: 3rpx;
}

/* 游戏列表 */
.games-container {
  width: 100%;
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.game-item {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.game-thumbnail {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.game-info {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.game-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.game-desc {
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.game-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #666;
}

.game-difficulty {
  background-color: #f0f0f0;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

.game-time {
  color: #4a90e2;
}

.game-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.game-unlocked {
  font-size: 24rpx;
  color: #4a90e2;
  background-color: rgba(74, 144, 226, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}

.game-locked {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-locked image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.game-locked text {
  font-size: 24rpx;
  color: #ff6b6b;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  max-height: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

/* 设置弹窗 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.setting-item text {
  font-size: 28rpx;
  color: #333;
}

/* 成就弹窗 */
.achievements-list {
  max-height: 800rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.achievement-item.unlocked {
  background-color: rgba(74, 144, 226, 0.05);
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.achievement-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.achievement-desc {
  font-size: 24rpx;
  color: #999;
  margin: 6rpx 0;
}

.achievement-points {
  font-size: 22rpx;
  color: #4a90e2;
}

.achievement-status {
  display: flex;
  align-items: center;
}

.achievement-status image {
  width: 40rpx;
  height: 40rpx;
}

/* 商店弹窗 */
.shop-points {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.shop-items {
  max-height: 800rpx;
}

.shop-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.shop-item-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.shop-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.shop-item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.shop-item-desc {
  font-size: 24rpx;
  color: #999;
  margin: 6rpx 0;
}

.shop-item-price {
  display: flex;
  align-items: center;
}

.shop-item-price image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
}

.shop-item-price text {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 活动弹窗 */
.activities-list {
  max-height: 800rpx;
}

.activity-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.activity-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.activity-desc {
  font-size: 24rpx;
  color: #999;
  margin: 6rpx 0;
}

.activity-date {
  font-size: 22rpx;
  color: #666;
}

.activity-reward {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.activity-reward text {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-bottom: 6rpx;
}
