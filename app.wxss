}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

.avatar-large {
  width: 100rpx;
  height: 100rpx;
}

/* 徽章样式 */
.badge-container {
  position: relative;
  display: inline-block;
}

.badge-dot {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #e74c3c;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}