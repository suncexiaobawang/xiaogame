.btn-block {
  width: 100%;
  display: block;
}

.btn-disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.card-body {
  padding: 20rpx;
}

.card-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 5rpx 15rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background-color: rgba(0, 120, 215, 0.1);
  color: #0078d7;
}

.tag-success {
  background-color: rgba(46, 204, 113, 0.1);
  color: #2ecc71;
}

.tag-danger {
  background-color: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
}

.tag-warning {
  background-color: rgba(243, 156, 18, 0.1);
  color: #f39c12;
}

.tag-info {
  background-color: rgba(52, 152, 219, 0.1);
  color: #3498db;
}

/* 徽章样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 10rpx;
  border-radius: 18rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #e74c3c;
}

/* 加载样式 */
.loading {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(0, 120, 215, 0.3);
  border-radius: 50%;
  border-top-color: #0078d7;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 分割线样式 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

.divider-vertical {
  width: 1rpx;
  height: 100%;
  background-color: #eee;
  margin: 0 20rpx;
}

/* 列表样式 */
.list {
  background-color: #fff;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
}

.list-item-extra {
  margin-left: 20rpx;
}

/* 网格样式 */
.grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.grid-item-2 {
  width: 50%;
}

.grid-item-3 {
  width: 33.33%;
}

.grid-item-4 {
  width: 25%;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: flex-end;
}

/* 提示框样式 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  z-index: 2000;
}

/* 进度条样式 */
.progress {
  width: 100%;
  height: 20rpx;
  background-color: #f1f1f1;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #0078d7;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

/* 开关样式 */
.switch {
  position: relative;
  display: inline-block;
  width: 100rpx;
  height: 60rpx;
}

.switch-input {
  opacity: 0;
  width: 0;
  height: 0;
}

.switch-slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ccc;
  transition: .4s;
  border-radius: 34rpx;
}

.switch-slider:before {
  position: absolute;
  content: "";
  height: 52rpx;
  width: 52rpx;
  left: 4rpx;
  bottom: 4rpx;
  background-color: white;
  transition: .4s;
  border-radius: 50%;
}

.switch-input:checked + .switch-slider {
  background-color: #0078d7;
}

.switch-input:checked + .switch-slider:before {
  transform: translateX(40rpx);
}

/* 图标样式 */
.icon {
  width: 40rpx;
  height: 40rpx;
}

.icon-small {
  width: 32rpx;
  height: 32rpx;
}

.icon-large {
  width: 48rpx;
